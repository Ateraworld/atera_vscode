{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        /* Language and Environment */
        "target": "es2022",
        "baseUrl": "./",
        /* Modules */
        "module": "commonjs",
        "rootDir": "./",
        "resolveJsonModule": true,
        /* Emit */
        "outDir": "out",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        /* Completeness */
        "skipLibCheck": true
    }
}
