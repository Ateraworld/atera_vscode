{
  "name": "atera-vscode",
  "displayName": "atera_vscode",
  "description": "The official Atera vscode extension",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ateraworld/atera_vscode"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "view/title": [
        {
          "command": "relation-editor.refresh",
          "when": "view == relation-editor",
          "group": "navigation"
        },
        {
          "command": "relation-editor.sanitizeRelation",
          "when": "view == relation-editor",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "relation-editor.addPoint",
          "when": "view == relation-editor && viewItem == points",
          "group": "inline"
        },
        {
          "command": "relation-editor.addMark",
          "when": "view == relation-editor && (viewItem == point-instance || viewItem == image-instance || viewItem == editor-bold || viewItem == editor-italic || viewItem == editor-act-ref)",
          "group": "inline"
        },
        {
          "command": "relation-editor.addImage",
          "when": "view == relation-editor && viewItem == images",
          "group": "inline"
        },
        {
          "command": "relation-editor.addSection",
          "when": "view == relation-editor && viewItem == sections",
          "group": "inline"
        }
      ]
    },
    "views": {
      "atera": [
        {
          "id": "relation-editor",
          "name": "Relation",
          "icon": "",
          "contextualTitle": "Atera"
        },
        {
          "id": "code-editor",
          "name": "Code",
          "icon": "",
          "contextualTitle": "Atera"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "atera",
          "title": "Atera",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "relation-editor.refresh",
        "title": "Atera: Refresh Relation Editor",
        "icon": "$(refresh)"
      },
      {
        "command": "relation-editor.addPoint",
        "title": "Atera: Add Interest Point",
        "icon": "$(diff-added)"
      },
      {
        "command": "relation-editor.addSection",
        "title": "Atera: Add Relation Section",
        "icon": "$(diff-added)"
      },
      {
        "command": "relation-editor.addImage",
        "title": "Atera: Add Image",
        "icon": "$(diff-added)"
      },
      {
        "command": "relation-editor.addMark",
        "title": "Atera: Add Mark",
        "icon": "$(insert)"
      },
      {
        "command": "relation-editor.sanitizeRelation",
        "title": "Atera: Sanitize Relation",
        "icon": "$(sparkle)"
      }
    ],
    "activationEvents": [
      "onView:relation-editor"
    ],
    "configuration": {
      "title": "Atera",
      "properties": {
        "atera.activitiesDataRoot": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The root folder of the activities. If specified allows to graphically select available activities"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ts-node": "^10.9.1"
  }
}