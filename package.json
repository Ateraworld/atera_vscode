{
  "name": "atera-vscode",
  "displayName": "Atera",
  "description": "The official Atera vscode extension",
  "icon": "assets/logo_4k.png",
  "version": "1.1.0",
  "author": {
    "name": "Ateraworld",
    "email": "atera.world@gmail.com",
    "url": "https://ateraworld.github.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ateraworld/atera_vscode"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "relation-editor.removeRelationItem",
          "when": "false"
        },
        {
          "command": "relation-editor.addLocation",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "relation-editor.refresh",
          "when": "view == relation-editor",
          "group": "navigation"
        },
        {
          "command": "relation-editor.sanitizeRelation",
          "when": "view == relation-editor",
          "group": "navigation"
        },
        {
          "command": "relation-editor.setParams",
          "when": "view == relation-editor",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "relation-editor.addPoint",
          "when": "view == relation-editor && viewItem == points",
          "group": "inline"
        },
        {
          "command": "relation-editor.removeRelationItem",
          "when": "view == relation-editor && (viewItem == point-instance || viewItem == image-instance || viewItem == section-instance)",
          "group": "inline"
        },
        {
          "command": "relation-editor.addImage",
          "when": "view == relation-editor && viewItem == images",
          "group": "inline"
        },
        {
          "command": "relation-editor.addSection",
          "when": "view == relation-editor && viewItem == sections",
          "group": "inline"
        }
      ]
    },
    "views": {
      "atera": [
        {
          "id": "relation-editor",
          "name": "Relation",
          "icon": "",
          "contextualTitle": "Atera"
        },
        {
          "id": "code-editor",
          "name": "Code",
          "icon": "",
          "contextualTitle": "Atera"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "atera",
          "title": "Atera",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "relation-editor.addLocation",
        "title": "Atera: Add Location",
        "icon": "$(edit)"
      },
      {
        "command": "relation-editor.setParams",
        "title": "Atera: Set Params",
        "icon": "$(graph)"
      },
      {
        "command": "relation-editor.addSymbol",
        "title": "Atera: Add Symbol",
        "icon": "$(insert)"
      },
      {
        "command": "relation-editor.refresh",
        "title": "Atera: Refresh Relation Editor",
        "icon": "$(refresh)"
      },
      {
        "command": "relation-editor.addPoint",
        "title": "Atera: Add Interest Point",
        "icon": "$(diff-added)"
      },
      {
        "command": "relation-editor.removeRelationItem",
        "title": "Atera: Remove Relation Item",
        "icon": "$(remove)"
      },
      {
        "command": "relation-editor.addSection",
        "title": "Atera: Add Relation Section",
        "icon": "$(diff-added)"
      },
      {
        "command": "relation-editor.addImage",
        "title": "Atera: Add Image",
        "icon": "$(diff-added)"
      },
      {
        "command": "relation-editor.addMark",
        "title": "Atera: Add Mark",
        "icon": "$(insert)"
      },
      {
        "command": "relation-editor.sanitizeRelation",
        "title": "Atera: Sanitize Relation",
        "icon": "$(sparkle)"
      }
    ],
    "activationEvents": [
      "onView:relation-editor"
    ],
    "configuration": {
      "title": "Atera",
      "properties": {
        "atera.dataRoot": {
          "type": "string",
          "default": "",
          "markdownDescription": "The **root** folder of the SDK data.\n\nIf specified, allows more advanced utilities such as graphical selection of activities references in relations and more.\n\nConsidering the **SDK** structure, this path should point at `%atera_admin_sdk%/data`"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "del /s /q out && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "build": "del /s /q out && tsc",
    "clean": "del /s /q out"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/uuid": "^9.0.1",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/node": "^18.15.13",
    "atera_admin_sdk": "github:Ateraworld/atera_admin_sdk#api",
    "ts-node": "^10.9.1"
  }
}